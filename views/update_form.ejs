<%- include('partials/navbar') %>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="/css/style.css">

<main class="container my-5">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <div class="card shadow-sm">
        <div class="card-body">
          <h1 class="text-primary mb-4">Edit Employee</h1>
          
          <% if (typeof error !== 'undefined') { %>
            <div class="alert alert-danger">
              <%= error %>
            </div>
          <% } %>

          <form action="/update/<%= employee._id %>" method="POST">
            <div class="mb-3">
              <label for="name" class="form-label">Full Name:</label>
              <input type="text" class="form-control" id="name" name="name" value="<%= employee.name %>" required>
            </div>

            <div class="mb-3">
              <label for="position" class="form-label">Position:</label>
              <input type="text" class="form-control" id="position" name="position" value="<%= employee.position %>" required>
            </div>

            <div class="mb-3">
              <label for="department" class="form-label">Batting Average:</label>
              <input type="text" class="form-control" id="department" name="department" value="<%= employee.department %>" required>
            </div>


            <div class="d-flex gap-2">
              <button type="submit" class="btn btn-warning">Update Employee</button>
              <a href="/update" class="btn btn-secondary">Back to List</a>
              <a href="/employee_records" class="btn btn-secondary">View All Records</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>